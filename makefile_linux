
out = out/bin
inc = ext/inc
lib = ext/lib

cflags = -c -Wall -O3 -I$(inc) 

compile_vulkan:
	gcc $(cflags) src/vulkan/core.c -o $(out)/vk_core.obj
	gcc $(cflags) src/vulkan/vram.c -o $(out)/vk_vram.obj
	gcc $(cflags) src/vulkan/resources.c -o $(out)/vk_resources.obj
	gcc $(cflags) src/vulkan/render.c -o $(out)/vk_render.obj
	gcc $(cflags) src/vulkan/vulkan.c -o $(out)/vulkan.obj

compile_main:
	gcc -c -Wall -O3 src/main.c -o $(out)/main.obj

link:
	gcc -o out/bin/main.bin $(out)/main.obj $(out)/vk_core.obj $(out)/vk_vram.obj $(out)/vk_resources.obj $(out)/vk_render.obj $(out)/vulkan.obj -L$(lib) -lglfw -lvulkan -ldl -lpthread -lX11 -lXrandr
